generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  open
  closed
  in_progress
}

enum Priority {
  medium
  low
  high
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Issues {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      Status   @default(open)
  priority    Priority @default(medium)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  comments Comments[]

  @@index([status])
  @@index([priority])
  @@index([createdAt])
}

model Comments {
  id        Int      @id @default(autoincrement())
  issueId   Int
  body      String
  createdAt DateTime @default(now())

  issue Issues @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([issueId])
  @@index([createdAt])
}
